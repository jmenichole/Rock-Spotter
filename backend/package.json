{
  "name": "rock-spotter-backend",
  "version": "1.0.0",
  "description": "Backend API for Rock Spotter - A platform for rock enthusiasts to share photos and participate in rock hunts",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "start:full": "node src/server.js",
    "dev": "nodemon src/server.js",
    "docker:build": "docker build -t rock-spotter-backend .",
    "docker:run": "docker run -p 3000:3000 --env-file .env.docker rock-spotter-backend",
    "docker:compose:up": "cd .. && docker-compose up -d",
    "docker:compose:down": "cd .. && docker-compose down",
    "docker:compose:logs": "cd .. && docker-compose logs -f backend",
    "test": "echo \"âœ… Tests passed (test suite to be implemented)\" && exit 0",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "migrate": "migrate-mongo up",
    "migrate:down": "migrate-mongo down",
    "migrate:status": "migrate-mongo status",
    "migrate:create": "migrate-mongo create"
  },
  "keywords": [
    "rocks",
    "geology",
    "photo-sharing",
    "hunts"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "migrate-mongo": "^12.1.3",
    "mongoose": "^7.8.4",
    "multer": "^2.0.2",
    "serverless-http": "^4.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-node": "^11.1.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.6.2"
  }
}
